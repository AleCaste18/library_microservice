services:
  booksdb:
    container_name: BooksDB
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: yourStrong(!)Password5
    image: mcr.microsoft.com/mssql/server:2019-CU14-ubuntu-20.04
    ports:
    - mode: ingress
      target: 1433
      published: 1433
      protocol: tcp
    volumes:
    - type: volume
      source: sqlserver_data
      target: /var/opt/mssql
      volume: {}
  booksservice:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: BooksAPP
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: booksservice
    ports:
    - mode: ingress
      target: 443
      published: 1818
      protocol: tcp
    - mode: ingress
      target: 80
      published: 1819
      protocol: tcp
    volumes:
    - type: bind
      source: C:\Users\lino-\.aspnet\https
      target: /root/.aspnet/https
      read_only: true
      bind:
        create_host_path: true
    - type: bind
      source: C:\Users\lino-\.microsoft\usersecrets
      target: /root/.microsoft/usersecrets
      read_only: true
      bind:
        create_host_path: true
volumes:
  sqlserver_data:
    name: sqlserver_data
    driver: local