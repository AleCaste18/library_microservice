services:
  booksservice:
    build:
      context: C:\Users\lino-\Desktop\src\BooksService
      dockerfile: Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: BooksService
      target: base
    container_name: BooksService
    depends_on:
      db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ASPNETCORE_URLS: https://+:443;http://+:80
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
    image: booksservice:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/net5.0/BooksService.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 1819
      target: 80
    - published: 1818
      target: 443
    tty: true
    volumes:
    - C:\Users\lino-\Desktop\src\BooksService:/app:rw
    - C:\Users\lino-\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\lino-\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\lino-\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Users\lino-\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\lino-\Desktop\src\BooksService:/src:rw
  db:
    container_name: BooksSQLdb
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: yourStrong(!)Password5
    image: mcr.microsoft.com/mssql/server:2019-CU14-ubuntu-20.04
    ports:
    - published: 1433
      target: 1433
version: '3.4'